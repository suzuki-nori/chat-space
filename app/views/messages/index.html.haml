.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name Suzuki-Nori
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            = link_to "/groups/new" do
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            = link_to "/users/edit" do
              %i.fa.fa-cog
    .groups 
      .group
        %p.group__group-name サンプル
        %p.group__latest-message こんにちは！
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group{"data-group_id": "#"}  サンプル
        %ul.main-header__left-box__member-list  Member：
        %li.main-header__left-box__member-list__member  Suzuki-Nori 
      .main-header__edit-btn Edit
    .messages
      .message{"data-message_id": "#"}
        .message__upper-info
          %p.message__upper-info__talker Suzuki-Nori
          %p.message__upper-info__date 2019/10/07(Mon) 20:13:36
        %p.message__text こんにちは！
    .form
      %form#new_message.new_message{"accept-charset": "UTF-8", action: "/groups/messages", enctype: "multipart/form-data", method: "post"}
        %input{name: "utf8", type: "hidden", value: "✓"}/           
        %input{name: "authenticity_token", type: "hidden", value: "oAoXX+Q0Gt4Psble8PdHJQvufuzQANYWlgXBQysFL1EP/FWmX2QwnM+CGOOATpW2WhqmN0FbgsejBNJco3bnHA=="}/
        .input-box
          %input#message_content.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}/
          %label.input-box__image{for: "message_image"}
            %i.fa.fa-image
          %input#message_image.input-box__image__file{name: "message[image]", type: "file"}/
        %input.submit-btn{"data-disable-with" => "Send", name: "commit", type: "submit", value: "Send"}/